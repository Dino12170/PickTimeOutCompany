        </div>
    </div>

    <!-- JavaScript -->
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            var btn = document.querySelector(".toggle-btn i");

            sidebar.classList.toggle("collapsed");
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
