<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Tổng layout */
        .main-container {
            display: flex;
            height: 100vh;
            background: #f4f4f4;
        }

        /* Sidebar */
        .sidebar {
            width: 160px;
            background: #2c3e50;
            color: white;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            transition: width 0.3s ease-in-out;
            padding-left: 0px;
            padding-right: 0px;
        }

            /* Khi sidebar thu nhỏ */
            .sidebar.collapsed {
                width: 60px;
                align-items: center;
            }

            /* Logo */
            .sidebar .logo {
                align-items: center;
                justify-content: flex-start;
                font-size: 22px;
                font-weight: bold;
                color: white;
                height: 30px;
                padding-left: 50px;
                margin-top:5px;
            }

            /* Khi thu nhỏ, ẩn chữ */
            .sidebar.collapsed .logo span {
                display: none;
            }

        /* Nút toggle */
        .toggle-btn {
            position: absolute;
            top: 15px;
            left: 15px;
            background: none;
            border: none;
            font-size: 20px;
            color: white;
            cursor: pointer;
            padding: 5px;
            background: #34495e;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

        .sidebar-header {
            display: grid;
            grid-template-columns: auto 1fr; /* Cột đầu nhỏ, cột sau lớn */
            align-items: center;
            padding-left: 10px;
            gap: 10px; /* Khoảng cách giữa button và logo */
        }

        .sidebar.collapsed .toggle-btn {
            left: 10px;
        }

        a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            width: 100%;
        }

            a:hover {
                color: white;
                text-decoration: none;
                background: #34495e;
            }

        /* Menu */
        .sidebar .menu {
            list-style: none;
            padding: 20px 0;
            margin: 0;
            flex: 1;
        }

            .sidebar .menu li {
                padding: 12px;
                display: flex;
                align-items: center;
                transition: background 0.3s;
            }

                .sidebar .menu li a {
                    color: white;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    width: 100%;
                    padding-left: 10px;
                }

                .sidebar .menu li i {
                    font-size: 18px;
                    width: 24px;
                    text-align: center;
                    margin-right: 10px;
                }

                .sidebar .menu li:hover {
                    background: #34495e;
                }

        /* Khi thu gọn, ẩn chữ */
        .sidebar.collapsed .menu li a span {
            display: none;
        }

        /* Nội dung chính */
        .content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s ease-in-out;
            width: calc(100% - 250px);
        }

        /* Khi sidebar thu nhỏ */
        .sidebar.collapsed + .content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }

        .logo {
            margin-top: 0px;
        }

            .logo span a {
                text-decoration: none;
                font-size: 18px;
                font-weight: bold;
            }

        /* Footer */
        footer {
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            background: #eaeaea;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
