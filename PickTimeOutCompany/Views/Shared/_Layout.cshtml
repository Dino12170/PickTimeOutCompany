                </button>
                <div class="logo">
                    <span><a href="@Url.Action("Index", "Home")">登記平台</a></span>
                </div>
            </div>
            <ul class="menu">
                @*@if (Session["Role"] != null && Session["Role"].ToString() == "HR")
