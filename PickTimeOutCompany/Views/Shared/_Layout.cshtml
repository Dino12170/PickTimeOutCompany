<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/x-icon" href="~/Logo/图标.jpeg">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="logo-center navbar-brand">
                    <div>@Html.ActionLink("TimeOut Web", "Index", "Home")</div>
                </div>
            </div>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Pick Time Out", "VehicleDispatch", "VehicleDispatch")</li>
                </ul>

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Data For HR", "DataForHr", "DataForHr")</li>
                </ul>

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Log Out", "Login", "Home")</li>
                </ul>
            </div>

            @*<div class="logo-center navbar-brand">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Log Out", "Login", "Home")</li>
                    </ul>
                </div>*@
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PickTimeOutComany - GMV</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
