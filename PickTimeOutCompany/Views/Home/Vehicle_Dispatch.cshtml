@section Scripts{
    <script>
        $(document).ready(function () {
            //updateTable();
        });

        function updateTable() {
            $.ajax({
                url: '/Home/GetTableData',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var tableBody = $('#dataBody');
                    tableBody.empty();
                    if (data.length === 0) {
                        document.getElementById("comboBox1").disabled = false;
                        document.getElementById("comboBox2").disabled = false;
                        document.getElementById("btnUpdate").style.display = "none";
                        document.getElementById("btnOK").style.display = "block";
                    }
                    else {
                        $.each(data, function (index, item) {
                            var row = `<tr style="text-align: center;">
                                                <td>${item.DATE_OUT}</td>
                                                <td>${item.USER_NAME}</td>
                                                <td>${item.DESCRIPTION}</td>
                                                <td>${item.TIME_OUT}</td>
                                                <td>${item.ADDRESS}</td>
                                                <td>${item.CDT}</td>
                                                <td>${item.UDT}</td>
                                            </tr>`
                            tableBody.append(row);
                        });
                        document.getElementById("comboBox1").disabled = true;
                        document.getElementById("comboBox2").disabled = true;
                        document.getElementById("btnOK").style.display = "none";
                        document.getElementById("btnUpdate").style.display = "block";
                    }
                },
                error: function () {
                    alert("Lỗi khi tải dữ liệu!");
                }
            });
        }
        updateTable();

        document.getElementById("btnOK").addEventListener("click", function () {
            let selectedTimeValue = document.getElementById("comboBox1").value;
            let selectedAddressValue = document.getElementById("comboBox2").value;

            if (selectedTimeValue === "") {
                alert("Please select Time Out!");
            }
            else if (selectedAddressValue === "") {
                alert("Please select address!")
            }
            else {
                $.ajax({
                    url: "/Home/InsertData",
                    type: "GET", // Gửi bằng phương thức GET
                    data: { timeout: selectedTimeValue, address: selectedAddressValue },
                    dataType: "json",
                    success: function (result) {
                        if (result.success) {
                            console("Thay đổi thành công!");
                        } else {
                            console("Thay đổi thất bại!");
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Lỗi thêm dữ liệu:", error);
                    }
                });
                alert("Update successfully.");
                updateTable();
            }
        });

        document.getElementById("btnUpdate").addEventListener("click", function () {
            document.getElementById("comboBox1").disabled = false;
            document.getElementById("comboBox2").disabled = false;
            document.getElementById("btnUpdate").style.display = "none";
            document.getElementById("btnOK").style.display = "block";
            document.getElementById("comboBox1").value = "";
            document.getElementById("comboBox2").value = "";
        });

    </script>
